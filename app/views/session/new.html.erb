<div id="login_form">
<%= form_tag '/login' do %>
	<p>
	<%= label_tag 'username' %>
	<%= text_field_tag 'username', nil, :autofocus => true %>
	</p>
	<p>
	<%= label_tag 'password' %>
	<%= password_field_tag 'password' %>
	</p>

	<div id="form_button">
		<%= submit_tag 'Login' %>
	</div>
<% end %>
</div>
