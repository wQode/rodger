<h2>Documents</h2>

<div id="search_form">
	<%= form_tag searcher_path, :action => 'search', :method => 'get' do %>
		<p>
			<%= text_field_tag :search, params[:search], :id => 'search_field' %>
      	</p>
      	
		<div id="searchform_button">
      		<%= submit_tag "Search", :name => nil %> 
      		<%#= link_to "Clear", "$('search_field').clear()" %>
  		</div>		
  <% end %>
</div>
	

<div id="search_results">
    <% @results.each do |result| %>
  	<%= link_to result.title, :action => 'show', :id => result.id  %>
  <% end %>
</div>


<div class="documents_index">
<% @documents.each do |document| %>
	<div id="documents_index_inner">
		<h3><%= link_to(document.title, document_path(document)) if document.title %></h3>
		<p>of <%= link_to(document.classification.title, classification_path(document)) if document.classification %></p>	
		<p> - <%= document.content if document.content %></p>	
	</div><!-- documents_index_inner -->
<% end %>
</div><!-- documents_index -->